# Codex Cloud environment template for GettUppLanding
# Copy keys into Codex Cloud Settings > Environment Variables / Secrets.

# Runtime mode
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1

# Public Firebase (required for full UI features)
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=

# Firebase Admin (required for webhook + server-side writes)
FIREBASE_ADMIN_PROJECT_ID=
FIREBASE_ADMIN_CLIENT_EMAIL=
# Keep escaped newlines. firebase-admin loader replaces \\n with real newlines.
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n"

# Stripe (required for checkout + webhooks)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# AI integrations
GOOGLE_GENERATIVE_AI_API_KEY=
OPENAI_API_KEY=

# Optional services
NEXT_PUBLIC_SANITY_PROJECT_ID=
NEXT_PUBLIC_SANITY_DATASET=production
SENTRY_DSN=
VERCEL_ANALYTICS_ID=

# Runtime guards
PROXY_API_RATE_LIMIT=120
ALLOW_UNSAFE_EVAL_IN_DEV=0
