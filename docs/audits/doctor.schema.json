{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "ok": { "type": "boolean" },
    "timestamp": { "type": "string" },
    "checks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "status": { "type": "string", "enum": ["PASS", "FAIL", "WARN", "SKIP"] },
          "message": { "type": "string" },
          "evidence": { "type": "string" }
        },
        "required": ["id", "status", "message"]
      }
    },
    "summary": {
      "type": "object",
      "properties": {
        "total": { "type": "number" },
        "passed": { "type": "number" },
        "failed": { "type": "number" }
      }
    }
  },
  "required": ["ok", "checks", "summary"]
}
